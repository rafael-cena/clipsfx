<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" prefHeight="480.0" prefWidth="640.0" spacing="28.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.clipsfx.NovoclipController">
   <children>
      <TextField fx:id="tfId">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <TextField fx:id="tfTitulo" promptText="Título do Clip">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <TextField fx:id="tfArtista" promptText="Artista">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <DatePicker fx:id="tdData" promptText="Data de Lançamento" />
      <TextField fx:id="tfDuracao" promptText="Duração do Clip">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <TextField fx:id="tfUrl" promptText="URL do Clip">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="28.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onCadastrar" text="Cadastrar" />
            <Button mnemonicParsing="false" onAction="#onCancelar" text="Cancelar" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
